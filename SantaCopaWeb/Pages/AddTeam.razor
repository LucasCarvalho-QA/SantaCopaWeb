<h3>AddTeam</h3>

@page "/addTeam"
@inject ITeamsService teamsService
@inject Microsoft.AspNetCore.Components.NavigationManager navigationManager

<div class="row">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="Name" class="control-label">Name</label>
                <input for="Name" class="form-control"
                       @bind-value="@teams.Name" />
                <label for="City" class="control-label">City</label>
                <input for="City" class="form-control"
                       @bind-value="@teams.Category" />
            </div>
            <div class="form-group">
                <button type="button" class="btn btn-primary"
                        @onclick="() => CreateTeam()">
                    Save
                </button>
                <button type="button" class="btn btn-warning"
                        @onclick="() => cancel()">
                    Cancel
                </button>
            </div>
        </form>
    </div>
</div>
@code {
    Teams teams = new Teams();
    protected async Task CreateTeam()
    {
        await teamsService.Create(teams);
        navigationManager.NavigateTo("/teamslist");
    }
    void cancel()
    {
        navigationManager.NavigateTo("/teamslist");
    }
}